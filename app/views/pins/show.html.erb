<div class="row">
	<div class="span6 offset2">
		<div class="well">
			<%= image_tag @pin.image %>
			<p>
	  		<big><%= @pin.description %></big>
	  		<br><br>
	  		<b><small>Created by <%= link_to @pin.user.name, @pin.user %></small></b>
			</p>
		</div>
	  
	  <% if current_user == @pin.user %>
			<b><%= link_to 'Edit', edit_pin_path(@pin) %> |
			<%= link_to 'Destroy', @pin, method: :delete, data: { confirm: 'Are you sure?' } %></b>
		<% end %>	
	</div>
</div>
<br><%= link_to 'Back', pins_path %>
